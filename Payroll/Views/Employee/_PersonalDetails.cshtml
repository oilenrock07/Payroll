@using Payroll.Extension
@model Payroll.Models.Employee.EmployeeInfoViewModel

<div class="row form-horizontal t2">

    @Html.HiddenFor(model => model.EmployeeInfo.Employee.EmployeeId)
    @Html.HiddenFor(model => model.ImagePath)

    <div class="col-md-7">
        <div class="form-group">
            @Html.LabelFor(model => model.EmployeeInfo.Employee.FirstName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.EmployeeInfo.Employee.FirstName, new { @class = "form-control " })
                @Html.ValidationMessageFor(model => model.EmployeeInfo.Employee.FirstName)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.EmployeeInfo.Employee.LastName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.EmployeeInfo.Employee.LastName, new { @class = "form-control " })
                @Html.ValidationMessageFor(model => model.EmployeeInfo.Employee.LastName)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.EmployeeInfo.Employee.MiddleName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.EmployeeInfo.Employee.MiddleName, new { @class = "form-control " })
                @Html.ValidationMessageFor(model => model.EmployeeInfo.Employee.MiddleName)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.EmployeeInfo.Employee.NickName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.EmployeeInfo.Employee.NickName, new { @class = "form-control " })
                @Html.ValidationMessageFor(model => model.EmployeeInfo.Employee.NickName)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.EmployeeInfo.Employee.Gender, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.Gender, Model.Genders, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Gender)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DisplayBirthDate, "Birthdate", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DatePickerFor("DisplayBirthDate", Model.DisplayBirthDate, new { @class = "form-control datepicker" })
                @Html.ValidationMessageFor(model => model.DisplayBirthDate)
            </div>
        </div>
    </div>

    <div class="col-md-2"></div>

    <div class="col-md-3">
        <div class="employee_info_picture">
            <img src="@Model.ImagePath" class="img-responsive employee-details-picture" title="@Model.EmployeeInfo.Employee.FullName" />
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <input type="file" name="Files" id="Files" />
            </div>
        </div>
    </div>
</div>